<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        <EditText
            android:id="@+id/nameid"
            android:layout_width="341dp"
            android:layout_height="64dp"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="33dp"
            android:ems="10"
            android:hint=" Name:"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/dobid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="105dp"
            android:layout_height="36dp"
            android:layout_marginStart="153dp"
            android:layout_marginLeft="153dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="153dp"
            android:layout_marginRight="153dp"
            android:layout_marginBottom="48dp"
            android:text="Bio Data"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/nameid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dobid"
            android:layout_width="341dp"
            android:layout_height="62dp"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:ems="10"
            android:hint="DOB:"
            android:inputType="date"
            android:onClick="showPicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameid" />

        <EditText
            android:id="@+id/phnid"
            android:layout_width="215dp"
            android:layout_height="64dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="37dp"
            android:ems="10"
            android:hint="Mobile No."
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/cntyid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/phntype"
            app:layout_constraintTop_toBottomOf="@+id/dobid" />

        <Spinner
            android:id="@+id/phntype"
            android:layout_width="103dp"
            android:layout_height="66dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/cntyid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dobid" />

        <AutoCompleteTextView
            android:id="@+id/cntyid"
            android:layout_width="341dp"
            android:layout_height="66dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="34dp"
            android:hint="Country:"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="140dp"
            android:layout_height="63dp"
            android:layout_marginStart="135dp"
            android:layout_marginLeft="135dp"
            android:layout_marginEnd="136dp"
            android:layout_marginRight="136dp"
            android:layout_marginBottom="161dp"
            android:onClick="showAlert"
            android:text="Submit"
            android:textSize="18sp"
            app:backgroundTint="#2CB612"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>